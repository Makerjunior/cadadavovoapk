<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/dialog_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialogRecipeImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/dialogRecipeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome da Receita"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/dialogRecipeCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoria: "
            android:textSize="16sp"
            android:textColor="@color/dark_gray"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/dialogRecipeOrigin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Origem: "
            android:textSize="16sp"
            android:textColor="@color/dark_gray"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/dialogRecipeIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredientes: "
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/dialogRecipeInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instruções: "
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/dialogCloseButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fechar"
            android:textSize="16sp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

</ScrollView>
